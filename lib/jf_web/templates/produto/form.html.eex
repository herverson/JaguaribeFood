<%= form_for @changeset, @action, [multipart: true], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, algo deu errado! Por favor veja os erros.</p>
    </div>
  <% end %>

  <div class="input-field">
    <%= text_input f, :nome, class: "form-control" %>
    <%= label f, :nome %>
    <%= error_tag f, :nome %>
  </div>

  <div class="input-field">
    <%= text_input f, :descricao, class: "form-control" %>
    <label for="produto_descricao">Descrição</label>
    <%= error_tag f, :descricao %>
  </div>

  <div class="input-field">
    <%= number_input f, :preco, step: "any", class: "form-control" %>
    <label for="produto_preco">Preço unitário</label>
    <%= error_tag f, :preco %>
  </div>

  <!-- <div class="form-group">
    <%= label f, :imagem, class: "control-label" %><br>
    <%= file_input f, :imagem, class: "form-control" %>
    <%= error_tag f, :imagem %>
    <br>
    <br>
  </div> -->

  <div class="form-group">
    <%= submit "Criar", class: "btn btn-primary" %>
  </div>
<% end %>
